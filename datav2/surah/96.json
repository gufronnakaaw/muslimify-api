[{"surah_number":96,"ayah_number":1,"arabic":"اِقْرَأْ بِاسْمِ رَبِّكَ الَّذِيْ خَلَقَۚ","kitabah":"اِقْرَأْ بِاسْمِ رَبِّكَ الَّذِيْ خَلَقَۚ","latin":"Iqra' bismi rabbikal-lażī khalaq(a).","translation":"Bacalah dengan (menyebut) nama Tuhanmu yang menciptakan!"},{"surah_number":96,"ayah_number":2,"arabic":"خَلَقَ الْاِنْسَانَ مِنْ عَلَقٍۚ","kitabah":"خَلَقَ الْاِنْسَانَ مِنْ عَلَقٍۚ","latin":"Khalaqal-insāna min ‘alaq(in).","translation":"Dia menciptakan manusia dari segumpal darah."},{"surah_number":96,"ayah_number":3,"arabic":"اِقْرَأْ وَرَبُّكَ الْاَكْرَمُۙ","kitabah":"اِقْرَأْ وَرَبُّكَ الْاَكْرَمُۙ","latin":"Iqra' wa rabbukal-akram(u).","translation":"Bacalah! Tuhanmulah Yang Maha Mulia,"},{"surah_number":96,"ayah_number":4,"arabic":"الَّذِيْ عَلَّمَ بِالْقَلَمِۙ","kitabah":"الَّذِيْ عَلَّمَ بِالْقَلَمِۙ","latin":"Allażī ‘allama bil-qalam(i).","translation":"yang mengajar (manusia) dengan pena."},{"surah_number":96,"ayah_number":5,"arabic":"عَلَّمَ الْاِنْسَانَ مَا لَمْ يَعْلَمْۗ","kitabah":"عَلَّمَ الْاِنْسَانَ مَا لَمْ يَعْلَمْۗ","latin":"‘Allamal-insāna mā lam ya‘lam.","translation":"Dia mengajarkan manusia apa yang tidak diketahuinya."},{"surah_number":96,"ayah_number":6,"arabic":"كَلَّآ اِنَّ الْاِنْسَانَ لَيَطْغٰىٓ ۙ","kitabah":"كَلَّآ اِنَّ الْاِنْسَانَ لَيَطْغٰىٓ ۙ","latin":"Kallā innal-insāna layaṭgā.","translation":"Sekali-kali tidak! Sesungguhnya manusia itu benar-benar melampaui batas"},{"surah_number":96,"ayah_number":7,"arabic":"اَنْ رَّاٰهُ اسْتَغْنٰىۗ","kitabah":"اَنْ رَّاٰهُ اسْتَغْنٰىۗ","latin":"Ar ra'āhustagnā.","translation":"ketika melihat dirinya serba berkecukupan."},{"surah_number":96,"ayah_number":8,"arabic":"اِنَّ اِلٰى رَبِّكَ الرُّجْعٰىۗ","kitabah":"اِنَّ اِلٰى رَبِّكَ الرُّجْعٰىۗ","latin":"Inna ilā rabbikar-ruj‘ā.","translation":"Sesungguhnya hanya kepada Tuhanmulah tempat kembali(-mu)."},{"surah_number":96,"ayah_number":9,"arabic":"اَرَاَيْتَ الَّذِيْ يَنْهٰىۙ","kitabah":"اَرَاَيْتَ الَّذِيْ يَنْهٰىۙ","latin":"Ara'aital-lażī yanhā.","translation":"Tahukah kamu tentang orang yang melarang"},{"surah_number":96,"ayah_number":10,"arabic":"عَبْدًا اِذَا صَلّٰىۗ","kitabah":"عَبْدًا اِذَا صَلّٰىۗ","latin":"‘Abdan iżā ṣallā.","translation":"seorang hamba ketika dia melaksanakan salat?"},{"surah_number":96,"ayah_number":11,"arabic":"اَرَاَيْتَ اِنْ كَانَ عَلَى الْهُدٰىٓۙ","kitabah":"اَرَاَيْتَ اِنْ كَانَ عَلَى الْهُدٰىٓۙ","latin":"Ara'aita in kāna ‘alal-hudā.","translation":"Bagaimana pendapatmu kalau terbukti dia berada di dalam kebenaran"},{"surah_number":96,"ayah_number":12,"arabic":"اَوْ اَمَرَ بِالتَّقْوٰىۗ","kitabah":"اَوْ اَمَرَ بِالتَّقْوٰىۗ","latin":"Au amara bit-taqwā. ","translation":"atau dia menyuruh bertakwa (kepada Allah)?"},{"surah_number":96,"ayah_number":13,"arabic":"اَرَاَيْتَ اِنْ كَذَّبَ وَتَوَلّٰىۗ","kitabah":"اَرَاَيْتَ اِنْ كَذَّبَ وَتَوَلّٰىۗ","latin":"Ara'aita in każżaba wa tawallā.","translation":"Bagaimana pendapatmu kalau dia mendustakan (kebenaran) dan berpaling (dari keimanan)?"},{"surah_number":96,"ayah_number":14,"arabic":"اَلَمْ يَعْلَمْ بِاَنَّ اللّٰهَ يَرٰىۗ","kitabah":"اَلَمْ يَعْلَمْ بِاَنَّ اللّٰهَ يَرٰىۗ","latin":"Alam ya‘lam bi'annallāha yarā.","translation":"Tidakkah dia mengetahui bahwa sesungguhnya Allah melihat (segala perbuatannya)?"},{"surah_number":96,"ayah_number":15,"arabic":"كَلَّا لَىِٕنْ لَّمْ يَنْتَهِ ەۙ لَنَسْفَعًاۢ بِالنَّاصِيَةِۙ","kitabah":"كَلَّا لَىِٕنْ لَّمْ يَنْتَهِ ەۙ لَنَسْفَعًاۢ بِالنَّاصِيَةِۙ","latin":"Kallā la'il lam yantah(i), lanasfa‘am bin-nāṣiyah(ti).","translation":"Sekali-kali tidak! Sungguh, jika dia tidak berhenti (berbuat demikian), niscaya Kami tarik ubun-ubunnya (ke dalam neraka),"},{"surah_number":96,"ayah_number":16,"arabic":"نَاصِيَةٍ كَاذِبَةٍ خَاطِئَةٍۚ","kitabah":"نَاصِيَةٍ كَاذِبَةٍ خَاطِئَةٍۚ","latin":"Nāṣiyatin kāżibatin khāṭi'ah(tin).","translation":"(yaitu) ubun-ubun orang yang mendustakan (kebenaran) dan durhaka."},{"surah_number":96,"ayah_number":17,"arabic":"فَلْيَدْعُ نَادِيَهٗۙ","kitabah":"فَلْيَدْعُ نَادِيَهٗۙ","latin":"Falyad‘u nādiyah(ū).","translation":"Biarlah dia memanggil golongannya (untuk menolongnya)."},{"surah_number":96,"ayah_number":18,"arabic":"سَنَدْعُ الزَّبَانِيَةَۙ","kitabah":"سَنَدْعُ الزَّبَانِيَةَۙ","latin":"Sanad‘uz-zabāniyah(ta).","translation":"Kelak Kami akan memanggil (Malaikat) Zabaniah (penyiksa orang-orang yang berdosa).759)"},{"surah_number":96,"ayah_number":19,"arabic":"كَلَّاۗ  لَا تُطِعْهُ وَاسْجُدْ وَاقْتَرِبْ ۩ ࣖ","kitabah":"كَلَّاۗ  لَا تُطِعْهُ وَاسْجُدْ وَاقْتَرِبْ ۩ ࣖ","latin":"Kallā, lā tuṭi‘hu wasjud waqtarib.","translation":"Sekali-kali tidak! Janganlah patuh kepadanya, (tetapi) sujud dan mendekatlah (kepada Allah)."}]