[{"surah_number":81,"ayah_number":1,"arabic":"اِذَا الشَّمْسُ كُوِّرَتْۖ","kitabah":"اِذَا الشَّمْسُ كُوِّرَتْۖ","latin":"Iżasy-syamsu kuwwirat.","translation":"Apabila matahari digulung,"},{"surah_number":81,"ayah_number":2,"arabic":"وَاِذَا النُّجُوْمُ انْكَدَرَتْۖ","kitabah":"وَاِذَا النُّجُوْمُ انْكَدَرَتْۖ","latin":"Wa iżan-nujūmunkadarat.","translation":"apabila bintang-bintang berjatuhan,"},{"surah_number":81,"ayah_number":3,"arabic":"وَاِذَا الْجِبَالُ سُيِّرَتْۖ","kitabah":"وَاِذَا الْجِبَالُ سُيِّرَتْۖ","latin":"Wa iżal-jibālu suyyirat.","translation":"apabila gunung-gunung dihancurkan,"},{"surah_number":81,"ayah_number":4,"arabic":"وَاِذَا الْعِشَارُ عُطِّلَتْۖ","kitabah":"وَاِذَا الْعِشَارُ عُطِّلَتْۖ","latin":"Wa iżal-‘isyāru ‘uṭṭilat.","translation":"apabila unta-unta yang bunting ditinggalkan (tidak terurus),"},{"surah_number":81,"ayah_number":5,"arabic":"وَاِذَا الْوُحُوْشُ حُشِرَتْۖ","kitabah":"وَاِذَا الْوُحُوْشُ حُشِرَتْۖ","latin":"Wa iżal-wuḥūsy ḥusyirat.","translation":"apabila binatang-binatang liar dikumpulkan,"},{"surah_number":81,"ayah_number":6,"arabic":"وَاِذَا الْبِحَارُ سُجِّرَتْۖ","kitabah":"وَاِذَا الْبِحَارُ سُجِّرَتْۖ","latin":"Wa iżal-biḥāru sujjirat.","translation":"apabila lautan dipanaskan,"},{"surah_number":81,"ayah_number":7,"arabic":"وَاِذَا النُّفُوْسُ زُوِّجَتْۖ","kitabah":"وَاِذَا النُّفُوْسُ زُوِّجَتْۖ","latin":"Wa iżan-nufūsu zuwwijat.","translation":"apabila roh-roh dipertemukan (dengan tubuh), "},{"surah_number":81,"ayah_number":8,"arabic":"وَاِذَا الْمَوْءٗدَةُ سُىِٕلَتْۖ ","kitabah":"وَاِذَا الْمَوْءٗدَةُ سُىِٕلَتْۖ ","latin":"Wa iżal-mau'ūdatu su'ilat.","translation":"apabila bayi-bayi perempuan yang dikubur hidup-hidup ditanya, "},{"surah_number":81,"ayah_number":9,"arabic":"بِاَيِّ ذَنْۢبٍ قُتِلَتْۚ","kitabah":"بِاَيِّ ذَنْۢبٍ قُتِلَتْۚ","latin":"Bi'ayyi żambin qutilat.","translation":"“Karena dosa apa dia dibunuh,”"},{"surah_number":81,"ayah_number":10,"arabic":"وَاِذَا الصُّحُفُ نُشِرَتْۖ","kitabah":"وَاِذَا الصُّحُفُ نُشِرَتْۖ","latin":"Wa iżaṣ-ṣuḥufu nusyirat.","translation":"apabila lembaran-lembaran (catatan amal) telah dibuka lebar-lebar, "},{"surah_number":81,"ayah_number":11,"arabic":"وَاِذَا السَّمَاۤءُ كُشِطَتْۖ","kitabah":"وَاِذَا السَّمَاۤءُ كُشِطَتْۖ","latin":"Wa iżas-samā'u kusyiṭat.","translation":"apabila langit dilenyapkan, "},{"surah_number":81,"ayah_number":12,"arabic":"وَاِذَا الْجَحِيْمُ سُعِّرَتْۖ","kitabah":"وَاِذَا الْجَحِيْمُ سُعِّرَتْۖ","latin":"Wa iżal-jaḥīmu su‘‘irat.","translation":"apabila (neraka) Jahim dinyalakan, "},{"surah_number":81,"ayah_number":13,"arabic":"وَاِذَا الْجَنَّةُ اُزْلِفَتْۖ","kitabah":"وَاِذَا الْجَنَّةُ اُزْلِفَتْۖ","latin":"Wa iżal-jannatu uzlifat.","translation":"dan apabila surga didekatkan, "},{"surah_number":81,"ayah_number":14,"arabic":"عَلِمَتْ نَفْسٌ مَّآ اَحْضَرَتْۗ","kitabah":"عَلِمَتْ نَفْسٌ مَّآ اَحْضَرَتْۗ","latin":"‘Alimat nafsum mā aḥḍarat.","translation":"setiap jiwa akan mengetahui apa yang telah dikerjakannya."},{"surah_number":81,"ayah_number":15,"arabic":"فَلَآ اُقْسِمُ بِالْخُنَّسِۙ","kitabah":"فَلَآ اُقْسِمُ بِالْخُنَّسِۙ","latin":"Falā uqsimu bil-khunnas(i).","translation":"Aku bersumpah demi bintang-bintang"},{"surah_number":81,"ayah_number":16,"arabic":"الْجَوَارِ الْكُنَّسِۙ","kitabah":"الْجَوَارِ الْكُنَّسِۙ","latin":"Al-jawāril-kunnas(i).","translation":"yang beredar lagi terbenam, "},{"surah_number":81,"ayah_number":17,"arabic":"وَالَّيْلِ اِذَا عَسْعَسَۙ","kitabah":"وَالَّيْلِ اِذَا عَسْعَسَۙ","latin":"Wal-laili iżā ‘as‘as(a).","translation":"demi malam apabila telah larut,"},{"surah_number":81,"ayah_number":18,"arabic":"وَالصُّبْحِ اِذَا تَنَفَّسَۙ","kitabah":"وَالصُّبْحِ اِذَا تَنَفَّسَۙ","latin":"Waṣ-ṣubḥi iżā tanaffas(a).","translation":"demi subuh apabila (fajar) telah menyingsing, "},{"surah_number":81,"ayah_number":19,"arabic":"اِنَّهٗ لَقَوْلُ رَسُوْلٍ كَرِيْمٍۙ","kitabah":"اِنَّهٗ لَقَوْلُ رَسُوْلٍ كَرِيْمٍۙ","latin":"Innahū laqaulu rasūlin karīm(in).","translation":"sesungguhnya (Al-Qur’an) itu benar-benar firman (Allah yang dibawa oleh) utusan yang mulia (Jibril)"},{"surah_number":81,"ayah_number":20,"arabic":"ذِيْ قُوَّةٍ عِنْدَ ذِى الْعَرْشِ مَكِيْنٍۙ","kitabah":"ذِيْ قُوَّةٍ عِنْدَ ذِى الْعَرْشِ مَكِيْنٍۙ","latin":"Żī quwwatin ‘inda żil-‘arsyi makīn(in).","translation":"yang memiliki kekuatan dan kedudukan tinggi di sisi (Allah) yang memiliki ʻArasy,"},{"surah_number":81,"ayah_number":21,"arabic":"مُّطَاعٍ ثَمَّ اَمِيْنٍۗ","kitabah":"مُّطَاعٍ ثَمَّ اَمِيْنٍۗ","latin":"Muṭā‘in ṡamma amīn(in).","translation":"yang di sana (Jibril) ditaati lagi dipercaya."},{"surah_number":81,"ayah_number":22,"arabic":"وَمَا صَاحِبُكُمْ بِمَجْنُوْنٍۚ","kitabah":"وَمَا صَاحِبُكُمْ بِمَجْنُوْنٍۚ","latin":"Wa mā ṣāḥibukum bimajnūn(in).","translation":"Temanmu (Nabi Muhammad) itu bukanlah orang gila. "},{"surah_number":81,"ayah_number":23,"arabic":"وَلَقَدْ رَاٰهُ بِالْاُفُقِ الْمُبِيْنِۚ","kitabah":"وَلَقَدْ رَاٰهُ بِالْاُفُقِ الْمُبِيْنِۚ","latin":"Wa laqad ra'āhu bil-ufuqil-mubīn(i).","translation":"Sungguh, dia (Nabi Muhammad) benar-benar telah melihatnya (Jibril) di ufuk yang terang. "},{"surah_number":81,"ayah_number":24,"arabic":"وَمَا هُوَ عَلَى الْغَيْبِ بِضَنِيْنٍۚ","kitabah":"وَمَا هُوَ عَلَى الْغَيْبِ بِضَنِيْنٍۚ","latin":"Wa mā huwa ‘alal-gaibi biḍanīn(in).","translation":"Dia (Nabi Muhammad) bukanlah seorang yang kikir (enggan) untuk menerangkan yang gaib."},{"surah_number":81,"ayah_number":25,"arabic":"وَمَا هُوَ بِقَوْلِ شَيْطٰنٍ رَّجِيْمٍۚ","kitabah":"وَمَا هُوَ بِقَوْلِ شَيْطٰنٍ رَّجِيْمٍۚ","latin":"Wa mā huwa biqauli syaiṭānir rajīm(in).","translation":"(Al-Qur’an) itu bukanlah perkataan setan yang terkutuk."},{"surah_number":81,"ayah_number":26,"arabic":"فَاَيْنَ تَذْهَبُوْنَۗ","kitabah":"فَاَيْنَ تَذْهَبُوْنَۗ","latin":"Fa aina tażhabūn(a).","translation":"Maka, ke manakah kamu akan pergi?747)"},{"surah_number":81,"ayah_number":27,"arabic":"اِنْ هُوَ اِلَّا ذِكْرٌ لِّلْعٰلَمِيْنَۙ","kitabah":"اِنْ هُوَ اِلَّا ذِكْرٌ لِّلْعٰلَمِيْنَۙ","latin":"In huwa illā żikrul lil-‘ālamīn(a).","translation":"(Al-Qur’an) itu tidak lain, kecuali peringatan bagi semesta alam, "},{"surah_number":81,"ayah_number":28,"arabic":"لِمَنْ شَاۤءَ مِنْكُمْ اَنْ يَّسْتَقِيْمَۗ","kitabah":"لِمَنْ شَاۤءَ مِنْكُمْ اَنْ يَّسْتَقِيْمَۗ","latin":"Liman syā'a minkum ay yastaqīm(a).","translation":"(yaitu) bagi siapa di antaramu yang hendak menempuh jalan yang lurus. "},{"surah_number":81,"ayah_number":29,"arabic":"وَمَا تَشَاۤءُوْنَ اِلَّآ اَنْ يَّشَاۤءَ اللّٰهُ رَبُّ الْعٰلَمِيْنَ ࣖ","kitabah":"وَمَا تَشَاۤءُوْنَ اِلَّآ اَنْ يَّشَاۤءَ اللّٰهُ رَبُّ الْعٰلَمِيْنَ ࣖ","latin":"Wa mā tasyā'ūna illā ay yasyā'allāhu rabbul-‘ālamīn(a).","translation":"Kamu tidak dapat berkehendak, kecuali apabila dikehendaki Allah, Tuhan semesta alam."}]